<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd">

<suite name="投资易课APP_UI自动化" parallel="tests" thread-count="2">
    <!-- 设置监听器 -->
    <listeners>
        <listener class-name="com.jds.testCase.caseRule.listener.LCaseType"/>
        <listener class-name="com.jds.testCase.caseRule.listener.LCaseRetry"/>
        <listener class-name="com.jds.testCase.caseRule.listener.LTestNG"/>
    </listeners>

    <!-- Android -->
    <test name="RegressionTesting_Android" verbose="2" enabled="true">
        <parameter name="port" value="4723"></parameter>
        <parameter name="udid" value="edd06f8e"></parameter>
        <classes>
            <class name="com.jds.testCase.caseList.Android.test2"></class>
        </classes>
    </test>

    <!-- IOS -->
    <test name="RegressionTesting_IOS" verbose="2" enabled="false">
        <parameter name="port" value="4725"></parameter>
        <parameter name="udid" value="1b00166a1d0b8363e8b40c4073d365d055d15bad"></parameter>
        <classes>
            <class name="com.jds.testCase.caseList.IOS.TestForIOS">
                <methods>
                    <include name="testCase1"></include>
                </methods>
            </class>
        </classes>
    </test>

    <!-- 测试 -->
    <test name="CompatibilityTesting" enabled="false">
        <classes>
            <class name="TestClass"></class>
        </classes>
    </test>
</suite>